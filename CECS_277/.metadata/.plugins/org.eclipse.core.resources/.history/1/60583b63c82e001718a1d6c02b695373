public class Buttons {

	public static void main(String[] args) {
		JPanel buttonPanel = new JPanel();
		buttonPanel.setLayout(new GridLayout(2,2));
		buttonPanel.add(new JTextArea());
		buttonPanel.add(new JTextArea());
		
	}

}
