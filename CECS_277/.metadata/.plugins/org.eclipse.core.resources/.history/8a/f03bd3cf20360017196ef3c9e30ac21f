package ShapeGame;

import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.EventQueue;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;
import javax.swing.SwingConstants;
import java.awt.SystemColor;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class Game extends JFrame {
	public Game() {
		startMenu();
	}

	static JFrame frame;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		startMenu();
		
	}	
	public static void startMenu(){
		frame = new JFrame();
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setVisible(true);
		frame.setSize(400, 400);
		
		JPanel contentPane = new JPanel();
		contentPane.setLayout(null);
		contentPane.setBounds(0, 0, frame.getWidth(), frame.getHeight());
		contentPane.setBackground(Color.darkGray);
		frame.getContentPane().setLayout(null);
		frame.getContentPane().setBackground(Color.DARK_GRAY);
		JLabel startText = new JLabel();
		startText.setOpaque(true);
		startText.setForeground(Color.BLACK);
		startText.setBackground(Color.LIGHT_GRAY);
		startText.setHorizontalAlignment(SwingConstants.CENTER);
		startText.setText("Shape Game");
		startText.setBounds(130, 82, 138, 31);
		contentPane.add(startText);
		JButton startButton = new JButton();
		startButton.addActionListener(new ActionListener() {

			@Override
			public void actionPerformed(ActionEvent e) {
				playGame();
			}
			
		});
		startButton.setText("Start");
		startButton.setForeground(SystemColor.activeCaptionText);
		startButton.setBackground(SystemColor.activeCaption);
		startButton.setLocation(154, 124);
		startButton.setSize(89, 73);
		contentPane.add(startButton);
		frame.add(contentPane);
	}
	
	public static void playGame(){
		frame.remove(contentPane);
		//frame.
	}
	

}
